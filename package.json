{
  "name": "flavourtown-sidebar",
  "publisher": "Jasonw-w",
  "displayName": "flavourtown-sidebar",
  "description": "Made for Hack Club Flavourtown event, used to track your cookie earning progress and coding time in VS Code sidebar.",
  "version": "0.1.2",
  "license": "MIT",
  "icon": "media/cookie.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jasonw-w/FT_cookietracker.git"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:flavourtown-data",
    "onCommand:flavourtown-sidebar.openSettings",
    "onCommand:flavourtown-sidebar.pickStoreItem"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flavourtown-sidebar-view",
          "title": "Flavourtown Stats",
          "icon": "media/chef.svg"
        }
      ]
    },
    "views": {
      "flavourtown-sidebar-view": [
        {
          "type": "webview",
          "icon": "media/chef.svg",
          "id": "flavourtown-data",
          "name": "Daily Stats",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "flavourtown-sidebar.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "flavourtown-sidebar.refreshStats",
        "title": "Refresh Flavourtown Stats",
        "icon": "$(refresh)"
      },
      {
        "command": "flavourtown-sidebar.welcome",
        "title": "Welcome to Flavourtown"
      },
      {
        "command": "flavourtown-sidebar.openSettings",
        "title": "Open Flavourtown Settings",
        "icon": "$(gear)"
      },
      {
        "command": "flavourtown-sidebar.pickStoreItem",
        "title": "Pick Flavourtown Store Item",
        "icon": "$(list-selection)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "flavourtown-sidebar.refreshStats",
          "when": "view == flavourtown-data",
          "group": "navigation"
        },
        {
          "command": "flavourtown-sidebar.openSettings",
          "when": "view == flavourtown-data",
          "group": "navigation"
        },
        {
          "command": "flavourtown-sidebar.pickStoreItem",
          "when": "view == flavourtown-data",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Flavourtown",
      "properties": {
        "flavourtown.hackatime_api": {
          "type": "string",
          "markdownDescription": "Hackatime API token used to fetch stats. Stored locally in your VS Code settings.",
          "default": "",
          "scope": "application"
        },
        "flavourtown.flavourtown_api": {
          "type": "string",
          "markdownDescription": "Flavourtown API token. Stored locally in your VS Code settings.",
          "default": "",
          "scope": "application"
        },
        "flavourtown.username": {
          "type": "string",
          "markdownDescription": "Hackatime username to fetch stats for.",
          "default": "",
          "scope": "application"
        },
        "flavourtown.storeItem": {
          "type": "string",
          "markdownDescription": "Preferred Flavourtown store item. Use the select command to pick from the latest fetched item list.",
          "default": "",
          "scope": "application"
        },
        "flavourtown.country": {
          "type": "string",
          "markdownDescription": "Country/region for Flavourtown pricing (au, ca, eu, in, uk, us, xx).",
          "default": "us",
          "enum": ["au", "ca", "eu", "in", "uk", "us", "xx"],
          "enumDescriptions": [
            "Australia",
            "Canada",
            "Europe",
            "India",
            "United Kingdom",
            "United States",
            "Other"
          ],
          "scope": "application"
        },
        "flavourtown.k": {
          "type": "number",
          "markdownDescription": "Advanced: k factor (default 1). Recommended: do not change unless you know why.",
          "default": 1,
          "scope": "application"
        },
        "flavourtown.beta": {
          "type": "number",
          "markdownDescription": "Advanced: beta factor (default 2). Recommended: do not change unless you know why.",
          "default": 2,
          "scope": "application"
        },
        "flavourtown.quality": {
          "type": "number",
          "markdownDescription": "Quality factor (1-15), sum of all your stars. Higher quality increases your time weight and increase cookie gain.",
          "default": 10,
          "minimum": 1,
          "maximum": 15,
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
