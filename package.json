{
  "name": "flavourtown-sidebar",
  "displayName": "flavourtown-sidebar",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:flavourtown-data"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flavourtown-sidebar-view",
          "title": "Flavourtown Stats",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "flavourtown-sidebar-view": [
        {
          "type": "webview",
          "icon": "media/icon.svg",
          "id": "flavourtown-data",
          "name": "Daily Stats",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "flavourtown-sidebar.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "flavourtown-sidebar.refreshStats",
        "title": "Refresh Flavourtown Stats",
        "icon": "$(refresh)"      },
      {
        "command": "flavourtown-sidebar.welcome",
        "title": "Welcome to Flavourtown"      }
    ]
    ,
    "menus": {
      "view/title": [
        {
          "command": "flavourtown-sidebar.refreshStats",
          "when": "view == flavourtown-data",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
